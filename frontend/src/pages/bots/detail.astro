<script>
    declare const Alpine: any;
    import { ApiClient } from "../../lib/api";
    import { BotEventSource } from "../../lib/events";

    // TypeScript interfaces
    interface Bot {
        id: string;
        name: string;
        identifier: string;
        platform: "WHATSAPP" | "TELEGRAM" | "INSTAGRAM";
        userId: string;
        ipv6Address?: string;
    }

    interface Trigger {
        id: string;
        keyword: string;
        matchType: string;
    }

    interface Flow {
        id: string;
        name: string;
        description: string;
        triggers: Trigger[];
    }

    interface Execution {
        id: string;
        status: string;
        startedAt: string;
        completedAt?: string;
        platformUserId: string;
        trigger?: string;
        error?: string;
        flow: { name: string };
    }

    interface LogFilters {
        status: string;
        search: string;
        startDate: string;
        endDate: string;
    }

    document.addEventListener("alpine:init", () => {
        Alpine.data("botDetail", () => ({
            botId: null as string | null,
            bot: {} as Bot,
            flows: [] as Flow[],
            ready: false,
            error: null as string | null,
            connectionHtml: "",

            // Import State
            showImportModal: false,
            loadingImport: false,
            sourceBots: [] as Bot[],
            sourceFlows: [] as Flow[],
            importData: {
                sourceBotId: "",
                sourceFlowId: "",
            },

            // Clone Bot State
            showCloneModal: false,
            savingClone: false,
            cloneForm: {
                name: "",
                identifier: "",
            },

            // Edit Bot State
            showEditModal: false,
            savingEdit: false,
            editForm: {
                name: "",
                identifier: "",
            },

            // AI Config State
            aiConfig: {
                aiEnabled: false,
                aiProvider: "OPENAI",
                aiModel: "gpt-5-mini",
                systemPrompt: "",
                temperature: 0.7,
                messageDelay: 0,
                excludeGroups: false,
                ignoredLabels: [] as string[],
            },
            savingAI: false,
            botLabels: [] as any[],
            syncingLabels: false,

            // Automations State
            automations: [] as any[],
            showCreateAutomation: false,
            automationForm: {
                name: "",
                event: "INACTIVITY" as string,
                labelName: "",
                timeoutValue: 3,
                timeoutUnit: "days" as string,
                prompt: "",
            },

            // Tools State
            builtinTools: [
                { name: "get_current_time", description: "Obtiene la fecha y hora actual en la zona horaria especificada." },
                { name: "clear_conversation", description: "Limpia el historial de conversación de la sesión actual." },
                { name: "get_labels", description: "Obtiene todas las etiquetas disponibles del bot con la cantidad de chats asignados." },
                { name: "assign_label", description: "Asigna una etiqueta existente al chat actual." },
                { name: "remove_label", description: "Remueve una etiqueta del chat actual." },
                { name: "get_sessions_by_label", description: "Busca todos los chats que tienen una etiqueta específica, con sus últimos mensajes." },
                { name: "reply_to_message", description: "Responde citando un mensaje específico del usuario (quote-reply de WhatsApp)." },
                { name: "send_followup_message", description: "Envía un mensaje de seguimiento a otra sesión/chat del bot." },
            ],
            tools: [] as any[],

            // Logs State
            activeTab: "flows", // 'flows' | 'clients' | 'ai' | 'tools' | 'automations' | 'logs'
            logs: [] as Execution[],
            loadingLogs: false,
            logsPagination: { total: 0, limit: 50, offset: 0 },
            filters: {
                status: "ALL",
                search: "",
                startDate: "",
                endDate: "",
            } as LogFilters,

            async init() {
                const params = new URLSearchParams(window.location.search);
                this.botId = params.get("id");

                if (!this.botId) {
                    this.error = "No bot ID provided";
                    return;
                }

                try {
                    // Fetch bot details
                    this.bot = await ApiClient.get(`/bots/${this.botId}`);

                    // Fetch flows for this bot
                    this.flows = await ApiClient.get(
                        `/flows?botId=${this.botId}`,
                    );

                    // Initialize AI config from bot data
                    this.aiConfig = {
                        aiEnabled: this.bot.aiEnabled || false,
                        aiProvider: this.bot.aiProvider || "OPENAI",
                        aiModel: this.bot.aiModel || "gpt-5-mini",
                        systemPrompt: this.bot.systemPrompt || "",
                        temperature: this.bot.temperature ?? 0.7,
                        messageDelay: this.bot.messageDelay ?? 0,
                        excludeGroups: this.bot.excludeGroups || false,
                        ignoredLabels: this.bot.ignoredLabels || [],
                    };

                    // Load bot labels for selectors
                    try {
                        this.botLabels = await ApiClient.get(`/sessions/labels?botId=${this.botId}`);
                    } catch (e) {
                        console.error("Failed to load labels", e);
                    }

                    // Generate connection component HTML (will be hydrated by Alpine)
                    this.connectionHtml = this.generateConnectionHtml();

                    this.ready = true;

                    // Re-initialize Alpine on the injected content
                    // @ts-ignore
                    this.$nextTick(() => {
                        const container = document.querySelector(
                            '[x-html="connectionHtml"]',
                        );
                        if (container) {
                            Alpine.initTree(container);
                        }
                    });
                } catch (e: unknown) {
                    const error = e as Error;
                    this.error = error.message || "Bot not found";
                }
            },

            generateConnectionHtml(): string {
                return `
                    <div class="p-4" x-data="botConnection_${this.botId?.replace(/-/g, "_")}" x-init="init()">
                        <div class="space-y-4">
                            <div class="flex items-center gap-3">
                                <span class="w-3 h-3 rounded-full flex-shrink-0" :class="connected ? 'bg-green-500' : 'bg-gray-600'"></span>
                                <span class="text-sm font-sans" :class="connected ? 'text-green-400' : 'text-wa-text-secondary'" x-text="connected ? $t('active') : $t('disconnected')"></span>
                            </div>
                            <template x-if="qr && !connected">
                                <div class="bg-white p-4 w-fit max-w-full rounded-lg">
                                    <img :src="qr" alt="QR Code" class="w-48 h-48 max-w-full max-h-full" />
                                </div>
                            </template>
                            <template x-if="!connected && !qr">
                                <button @click="connect()" :disabled="loading" class="w-full px-4 py-2 bg-wa-green text-white font-sans text-xs tracking-normal hover:bg-wa-green-hover transition-colors disabled:opacity-50 rounded-lg" x-text="loading ? $t('initializing') : $t('start_connection')"></button>
                            </template>
                            <template x-if="connected">
                                <button @click="disconnect()" :disabled="loading" class="w-full px-4 py-2 bg-red-500/20 text-red-400 border border-red-500/30 font-sans text-xs tracking-normal hover:bg-red-500/30 transition-colors disabled:opacity-50 rounded-lg" x-text="loading ? $t('disconnecting') : $t('disconnect')"></button>
                            </template>
                        </div>
                    </div>
                `;
            },

            cloneBot() {
                this.cloneForm.name = `${this.bot.name} (Copy)`;
                this.cloneForm.identifier = "";
                this.showCloneModal = true;
            },

            async submitCloneBot() {
                if (!this.cloneForm.name || !this.cloneForm.identifier) return;

                this.savingClone = true;
                try {
                    const newBot = await ApiClient.post(`/bots/${this.botId}/clone`, {
                        name: this.cloneForm.name,
                        identifier: this.cloneForm.identifier,
                    });
                    window.location.href = `/bots/detail?id=${newBot.id}`;
                } catch (e: unknown) {
                    const error = e as Error;
                    alert(error.message || "Failed to clone bot");
                } finally {
                    this.savingClone = false;
                }
            },

            editBot() {
                this.editForm.name = this.bot.name;
                this.editForm.identifier = this.bot.identifier;
                this.showEditModal = true;
            },

            async submitEditBot() {
                if (!this.editForm.name || !this.editForm.identifier) return;

                this.savingEdit = true;
                try {
                    const updated = await ApiClient.put(`/bots/${this.botId}`, {
                        name: this.editForm.name,
                        identifier: this.editForm.identifier,
                        platform: this.bot.platform,
                    });
                    this.bot = updated;
                    this.showEditModal = false;
                } catch (e: unknown) {
                    const error = e as Error;
                    alert(error.message || "Failed to update bot");
                } finally {
                    this.savingEdit = false;
                }
            },

            async deleteBot() {
                const confirmed = confirm(
                    "Delete this bot? This will also delete all associated flows.",
                );
                if (!confirmed) return;

                try {
                    await ApiClient.delete(`/bots/${this.botId}`);
                    window.location.href = "/bots";
                } catch (e: unknown) {
                    const error = e as Error;
                    alert(error.message || "Failed to delete bot");
                }
            },

            async openImportModal() {
                this.showImportModal = true;
                this.importData = { sourceBotId: "", sourceFlowId: "" };
                this.sourceFlows = [];

                try {
                    // Fetch all bots to choose from
                    this.sourceBots = await ApiClient.get("/bots");
                    // Filter out current bot optionally, but maybe self-import/duplication is useful?
                    // Let's keep it to allow duplicating flows within same bot.
                } catch (e) {
                    console.error("Failed to load bots", e);
                }
            },

            async loadSourceFlows() {
                if (!this.importData.sourceBotId) {
                    this.sourceFlows = [];
                    return;
                }
                try {
                    this.sourceFlows = await ApiClient.get(
                        `/flows?botId=${this.importData.sourceBotId}`,
                    );
                } catch (e) {
                    console.error("Failed to load flows", e);
                }
            },

            async loadLogs() {
                this.loadingLogs = true;
                try {
                    const params = new URLSearchParams();
                    params.append("botId", this.botId!);
                    params.append("limit", String(this.logsPagination.limit));
                    params.append("offset", String(this.logsPagination.offset));
                    if (this.filters.status !== "ALL")
                        params.append("status", this.filters.status);
                    if (this.filters.search)
                        params.append("search", this.filters.search);
                    if (this.filters.startDate)
                        params.append("startDate", this.filters.startDate);
                    if (this.filters.endDate)
                        params.append("endDate", this.filters.endDate);

                    const res = await ApiClient.get(
                        `/executions?${params.toString()}`,
                    );
                    this.logs = res.data;
                    this.logsPagination = {
                        ...this.logsPagination,
                        total: res.pagination.total,
                    };
                } catch (e) {
                    console.error("Failed to load logs", e);
                } finally {
                    this.loadingLogs = false;
                }
            },

            prevPage() {
                if (this.logsPagination.offset > 0) {
                    this.logsPagination.offset = Math.max(
                        0,
                        this.logsPagination.offset - this.logsPagination.limit,
                    );
                    this.loadLogs();
                }
            },

            nextPage() {
                if (
                    this.logsPagination.offset + this.logsPagination.limit <
                    this.logsPagination.total
                ) {
                    this.logsPagination.offset += this.logsPagination.limit;
                    this.loadLogs();
                }
            },

            formatDate(dateStr: string) {
                if (!dateStr) return "-";
                return new Date(dateStr).toLocaleString();
            },

            async importFlow() {
                if (!this.importData.sourceFlowId) return;

                this.loadingImport = true;
                try {
                    await ApiClient.post("/flows/import", {
                        sourceFlowId: this.importData.sourceFlowId,
                        targetBotId: this.botId,
                    });

                    this.showImportModal = false;
                    // Reload flows
                    this.flows = await ApiClient.get(
                        `/flows?botId=${this.botId}`,
                    );
                } catch (e: any) {
                    alert("Import failed: " + (e.message || "Unknown error"));
                } finally {
                    this.loadingImport = false;
                }
            },

            getLabelName(labelId: string) {
                const lbl = this.botLabels.find((l: any) => l.id === labelId);
                return lbl ? lbl.name : labelId;
            },

            getLabelColor(color: number) {
                const colors = ['#00a884','#53bdeb','#009de2','#ff9a00','#d13b3b','#a552a1','#5bc5d1','#fc7e7e','#e8b830','#e354c5','#00d0b6','#349ded','#8c68e0','#e56e56','#a0d669','#62c5e1','#7e90e5','#e89844','#e873b0','#6ccb78'];
                return colors[color % colors.length];
            },

            toggleIgnoredLabel(labelId: string) {
                const idx = this.aiConfig.ignoredLabels.indexOf(labelId);
                if (idx >= 0) {
                    this.aiConfig.ignoredLabels.splice(idx, 1);
                } else {
                    this.aiConfig.ignoredLabels.push(labelId);
                }
            },

            async syncLabels() {
                this.syncingLabels = true;
                try {
                    await ApiClient.post(`/sessions/labels/sync`, { botId: this.botId });
                    await new Promise(r => setTimeout(r, 3000));
                    this.botLabels = await ApiClient.get(`/sessions/labels?botId=${this.botId}`);
                } catch (e) {
                    console.error("Failed to sync labels", e);
                } finally {
                    this.syncingLabels = false;
                }
            },

            async saveAIConfig() {
                this.savingAI = true;
                try {
                    const updated = await ApiClient.put(`/bots/${this.botId}`, {
                        aiEnabled: this.aiConfig.aiEnabled,
                        aiProvider: this.aiConfig.aiProvider,
                        aiModel: this.aiConfig.aiModel,
                        systemPrompt: this.aiConfig.systemPrompt || null,
                        temperature: this.aiConfig.temperature,
                        messageDelay: this.aiConfig.messageDelay,
                        excludeGroups: this.aiConfig.excludeGroups,
                        ignoredLabels: this.aiConfig.ignoredLabels,
                    });
                    this.bot = updated;
                    alert("AI config saved!");
                } catch (e: any) {
                    alert("Failed to save AI config: " + (e.message || "Unknown error"));
                } finally {
                    this.savingAI = false;
                }
            },

            async clearConversations() {
                // @ts-ignore
                if (!confirm(this.$t('clear_conversations_confirm') || 'Clear all AI conversation history?')) return;
                try {
                    await ApiClient.post(`/bots/${this.botId}/clear-conversations`, {});
                    // @ts-ignore
                    alert(this.$t('conversations_cleared') || 'Conversations cleared');
                } catch (e: any) {
                    alert("Failed: " + (e.message || "Unknown error"));
                }
            },

            async loadTools() {
                try {
                    this.tools = await ApiClient.get(`/tools?botId=${this.botId}`);
                } catch (e) {
                    console.error("Failed to load tools", e);
                }
            },

            async convertFlowToTool(flowId: string) {
                try {
                    await ApiClient.post(`/tools/from-flow/${flowId}`, {});
                    await this.loadTools();
                    alert("Flow converted to tool!");
                } catch (e: any) {
                    alert("Failed: " + (e.message || "Unknown error"));
                }
            },

            // Automations
            async loadAutomations() {
                try {
                    this.automations = await ApiClient.get(`/bots/${this.botId}/automations`);
                } catch (e) {
                    console.error("Failed to load automations", e);
                }
            },

            async createAutomation() {
                const timeoutMs = this.automationForm.timeoutUnit === "days"
                    ? this.automationForm.timeoutValue * 24 * 60 * 60 * 1000
                    : this.automationForm.timeoutUnit === "hours"
                    ? this.automationForm.timeoutValue * 60 * 60 * 1000
                    : this.automationForm.timeoutValue * 60 * 1000;

                try {
                    await ApiClient.post(`/bots/${this.botId}/automations`, {
                        name: this.automationForm.name,
                        event: this.automationForm.event,
                        labelName: this.automationForm.labelName || null,
                        timeoutMs,
                        prompt: this.automationForm.prompt,
                    });
                    this.showCreateAutomation = false;
                    this.automationForm = { name: "", event: "INACTIVITY", labelName: "", timeoutValue: 3, timeoutUnit: "days", prompt: "" };
                    await this.loadAutomations();
                } catch (e: any) {
                    alert("Failed: " + (e.message || "Unknown error"));
                }
            },

            async toggleAutomation(autoId: string, enabled: boolean) {
                try {
                    await ApiClient.put(`/bots/${this.botId}/automations/${autoId}`, { enabled });
                    await this.loadAutomations();
                } catch (e: any) {
                    alert("Failed: " + (e.message || "Unknown error"));
                }
            },

            async deleteAutomation(autoId: string) {
                // @ts-ignore
                if (!confirm(this.$t('delete_confirm') || 'Are you sure?')) return;
                try {
                    await ApiClient.delete(`/bots/${this.botId}/automations/${autoId}`);
                    await this.loadAutomations();
                } catch (e: any) {
                    alert("Failed: " + (e.message || "Unknown error"));
                }
            },

            formatTimeout(ms: number): string {
                const minutes = ms / (60 * 1000);
                if (minutes >= 1440 && minutes % 1440 === 0) {
                    const days = minutes / 1440;
                    return `${days} ${days === 1 ? 'day' : 'days'}`;
                }
                if (minutes >= 60 && minutes % 60 === 0) {
                    const hours = minutes / 60;
                    return `${hours} ${hours === 1 ? 'hour' : 'hours'}`;
                }
                return `${minutes} min`;
            },
        }));

        // Dynamic registration of bot connection component
        const params = new URLSearchParams(window.location.search);
        const botId = params.get("id");
        if (botId) {
            const safeId = botId.replace(/-/g, "_");
            Alpine.data(`botConnection_${safeId}`, () => ({
                connected: false,
                loading: false,
                qr: null as string | null,
                sseClient: null as BotEventSource | null,

                init() {
                    this.checkStatus();

                    // SSE for real-time QR/status updates
                    this.sseClient = new BotEventSource(botId!);
                    this.sseClient
                        .on('bot:qr', (data: any) => {
                            this.qr = data.qr;
                            this.connected = false;
                        })
                        .on('bot:connected', () => {
                            this.connected = true;
                            this.qr = null;
                        })
                        .on('bot:disconnected', () => {
                            this.connected = false;
                            this.qr = null;
                        });
                    this.sseClient.connect();
                },

                destroy() {
                    if (this.sseClient) this.sseClient.close();
                },

                async checkStatus() {
                    try {
                        const status = await ApiClient.get(
                            `/bots/${botId}/status`,
                        );
                        this.connected = status.connected;
                        if (status.hasQr && !this.connected) {
                            const qrData = await ApiClient.get(
                                `/bots/${botId}/qr`,
                            );
                            this.qr = qrData.qr;
                        } else {
                            this.qr = null;
                        }
                    } catch (e) {
                        // Silent fail for status check
                    }
                },

                async connect() {
                    this.loading = true;
                    try {
                        await ApiClient.post(`/bots/${botId}/connect`, {});
                        await this.checkStatus();
                    } catch (e: unknown) {
                        const error = e as Error;
                        alert(error.message || "Failed to start connection");
                    } finally {
                        this.loading = false;
                    }
                },

                async disconnect() {
                    // @ts-ignore
                    if (
                        !confirm(
                            this.$t("disconnect_confirm") ||
                                "¿Desconectar este bot de WhatsApp?",
                        )
                    )
                        return;

                    this.loading = true;
                    try {
                        await ApiClient.post(`/bots/${botId}/disconnect`, {});
                        this.connected = false;
                        this.qr = null;
                    } catch (e: unknown) {
                        const error = e as Error;
                        alert(error.message || "Failed to disconnect");
                    } finally {
                        this.loading = false;
                    }
                },
            }));
        }
    });
</script>
