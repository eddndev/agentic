---
import Layout from "../../layouts/Layout.astro";
import BotConnection from "../../components/BotConnection.astro";
import ClientList from "../../components/clients/ClientList.astro";
import ClientModal from "../../components/clients/ClientModal.astro";
---

<Layout title="Bot Detail">
    <div
        x-data="botDetail"
        x-show="ready"
        class="space-y-8"
        style="display: none;"
    >
        <!-- Header -->
        <header
            class="flex flex-col lg:flex-row justify-between items-start lg:items-center border-b border-wa-border pb-6 relative gap-4"
        >

            <div class="flex-1 min-w-0">
                <div class="flex items-center gap-3 mb-2">
                    <a
                        href="/bots"
                        class="text-wa-text-secondary hover:text-wa-green transition-colors"
                        title="Back to Bots"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 19l-7-7 7-7"></path>
                        </svg>
                    </a>
                    <span
                        class="text-[10px] font-sans text-wa-green bg-wa-green/10 px-2 py-0.5 rounded-md"
                        x-text="bot.platform"></span>
                </div>

                <h1
                    class="text-3xl font-bold tracking-tight"
                    x-text="bot.name"
                >
                </h1>
                <p
                    class="text-xs font-sans text-wa-text-secondary mt-1"
                    x-text="bot.identifier"
                >
                </p>
                <p
                    x-show="bot.ipv6Address"
                    class="text-[10px] font-sans text-wa-green/70 mt-2 flex items-center gap-2 min-w-0"
                >
                    <span class="tracking-normal flex-shrink-0">IPv6:</span>
                    <span x-text="bot.ipv6Address" class="break-all"></span>
                </p>
            </div>

            <div class="flex gap-3 flex-wrap">
                <div class="flex gap-3 flex-wrap">
                    <a
                        :href="'/bots/monitor?botId=' + botId"
                        class="px-4 py-2 border border-wa-green/30 text-wa-green font-sans text-xs tracking-normal hover:bg-wa-green/10 transition-colors flex items-center gap-2 rounded-lg"
                    >
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                        </svg>
                        <span x-text="$t('monitor')">Monitor</span>
                    </a>
                    <a
                        :href="'/editor?botId=' + botId"
                        class="px-6 py-2 bg-wa-green text-white font-sans text-xs tracking-normal hover:bg-wa-green-hover transition-colors flex items-center gap-2 rounded-lg"
                    >
                        <span>+</span>
                        <span x-text="$t('new_flow')">New Flow</span>
                    </a>
                    <button
                        @click="openImportModal()"
                        class="px-4 py-2 border border-wa-border text-wa-text-secondary font-sans text-xs hover:bg-wa-bg-hover transition-colors rounded-lg flex items-center gap-2"
                        :title="$t('import_flow') || 'Import Flow'"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
                            ></path>
                        </svg>
                        <span x-text="$t('import') || 'Import'">Import</span>
                    </button>
                </div>
                <div class="flex gap-3 flex-wrap">
                    <button
                        @click="cloneBot()"
                        class="px-4 py-2 border border-wa-border text-wa-text-secondary font-sans text-xs hover:bg-wa-bg-hover transition-colors rounded-lg"
                        title="Clone Bot"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                            ></path>
                        </svg>
                    </button>
                    <button
                        @click="editBot()"
                        class="px-4 py-2 border border-wa-border text-wa-text-secondary font-sans text-xs hover:bg-wa-bg-hover transition-colors rounded-lg"
                        :title="$t('edit')"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                            ></path>
                        </svg>
                    </button>
                    <button
                        @click="deleteBot()"
                        class="px-4 py-2 border border-red-500/30 text-red-500 font-sans text-xs hover:bg-red-500/10 transition-colors rounded-lg"
                        :title="$t('delete')"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                            ></path>
                        </svg>
                    </button>
                </div>
            </div>
        </header>

        <!-- Tabs -->
        <div class="flex gap-2 mb-8 bg-wa-bg-header p-1 rounded-xl w-fit max-w-full flex-wrap">
            <button
                @click="activeTab = 'flows'"
                class="px-3 sm:px-6 py-2 font-sans text-xs sm:text-sm transition-all rounded-lg"
                :class="activeTab === 'flows' ? 'bg-wa-green text-white shadow-lg' : 'text-wa-text-secondary hover:text-white'"
            >
                <span x-text="$t('flows')">Flows</span>
            </button>
            <button
                @click="activeTab = 'clients'"
                class="px-3 sm:px-6 py-2 font-sans text-xs sm:text-sm transition-all rounded-lg"
                :class="activeTab === 'clients' ? 'bg-wa-green text-white shadow-lg' : 'text-wa-text-secondary hover:text-white'"
            >
                <span>Clientes</span>
            </button>
            <button
                @click="activeTab = 'ai'"
                class="px-3 sm:px-6 py-2 font-sans text-xs sm:text-sm transition-all rounded-lg"
                :class="activeTab === 'ai' ? 'bg-wa-green text-white shadow-lg' : 'text-wa-text-secondary hover:text-white'"
            >
                <span x-text="$t('ai_config')">AI Config</span>
            </button>
            <button
                @click="activeTab = 'tools'; loadTools()"
                class="px-3 sm:px-6 py-2 font-sans text-xs sm:text-sm transition-all rounded-lg"
                :class="activeTab === 'tools' ? 'bg-wa-green text-white shadow-lg' : 'text-wa-text-secondary hover:text-white'"
            >
                <span x-text="$t('tools')">Tools</span>
            </button>
            <button
                @click="activeTab = 'automations'; loadAutomations()"
                class="px-3 sm:px-6 py-2 font-sans text-xs sm:text-sm transition-all rounded-lg"
                :class="activeTab === 'automations' ? 'bg-wa-green text-white shadow-lg' : 'text-wa-text-secondary hover:text-white'"
            >
                <span x-text="$t('automations')">Automations</span>
            </button>
            <button
                @click="activeTab = 'logs'; loadLogs()"
                class="px-3 sm:px-6 py-2 font-sans text-xs sm:text-sm transition-all rounded-lg"
                :class="activeTab === 'logs' ? 'bg-wa-green text-white shadow-lg' : 'text-wa-text-secondary hover:text-white'"
            >
                <span x-text="$t('logs')">Logs</span>
            </button>
        </div>

        <!-- Clients Tab -->
        <div x-show="activeTab === 'clients'" style="display: none;">
            <div
                class="bg-wa-bg-panel border border-wa-border p-4 sm:p-6 relative min-h-[400px] rounded-xl"
            >

                <div class="flex justify-between items-center mb-6 gap-3 flex-wrap">
                    <h3
                        class="text-xs text-wa-green tracking-normal"
                    >
                        Listado de Clientes
                    </h3>
                    <div class="flex gap-2">
                        <ClientModal />
                    </div>
                </div>

                <ClientList />
            </div>
        </div>

        <!-- AI Config Tab -->
        <div x-show="activeTab === 'ai'" style="display: none;">
            <div class="bg-wa-bg-panel border border-wa-border p-4 sm:p-6 relative max-w-2xl rounded-xl">

                <h3 class="text-xs text-wa-green tracking-normal mb-6" x-text="$t('ai_config')">AI Config</h3>

                <form @submit.prevent="saveAIConfig()" class="space-y-6">
                    <!-- AI Enabled Toggle -->
                    <div class="flex items-center justify-between gap-4 p-4 bg-wa-bg-deep border border-wa-border rounded-lg">
                        <div class="min-w-0">
                            <label class="text-sm font-medium text-white" x-text="$t('ai_enabled')">AI Enabled</label>
                            <p class="text-xs text-wa-text-secondary mt-1" x-text="$t('ai_enabled_desc')"></p>
                        </div>
                        <button type="button" @click="aiConfig.aiEnabled = !aiConfig.aiEnabled"
                            class="relative w-12 h-6 rounded-full transition-colors flex-shrink-0"
                            :class="aiConfig.aiEnabled ? 'bg-wa-green' : 'bg-gray-700'">
                            <span class="absolute w-5 h-5 bg-white rounded-full top-0.5 transition-all"
                                :class="aiConfig.aiEnabled ? 'left-6' : 'left-0.5'"></span>
                        </button>
                    </div>

                    <!-- Provider -->
                    <div>
                        <label class="block text-xs font-sans text-wa-text-secondary mb-2" x-text="$t('ai_provider')">Provider</label>
                        <select x-model="aiConfig.aiProvider"
                            class="w-full bg-wa-bg-deep border border-wa-border text-white text-sm p-3 focus:border-wa-green focus:outline-none rounded-lg">
                            <option value="OPENAI">OpenAI (GPT-5-mini)</option>
                            <option value="GEMINI">Google Gemini</option>
                        </select>
                    </div>

                    <!-- Model -->
                    <div>
                        <label class="block text-xs font-sans text-wa-text-secondary mb-2" x-text="$t('ai_model')">Model</label>
                        <input type="text" x-model="aiConfig.aiModel"
                            class="w-full bg-wa-bg-deep border border-wa-border text-white text-sm p-3 focus:border-wa-green focus:outline-none rounded-lg"
                            placeholder="gpt-5-mini" />
                    </div>

                    <!-- System Prompt -->
                    <div>
                        <label class="block text-xs font-sans text-wa-text-secondary mb-2" x-text="$t('system_prompt')">System Prompt</label>
                        <textarea x-model="aiConfig.systemPrompt" rows="6"
                            class="w-full bg-wa-bg-deep border border-wa-border text-white text-sm p-3 focus:border-wa-green focus:outline-none resize-y rounded-lg"
                            :placeholder="$t('system_prompt_placeholder')"></textarea>
                    </div>

                    <!-- Temperature -->
                    <div>
                        <label class="block text-xs font-sans text-wa-text-secondary mb-2">
                            <span x-text="$t('temperature')">Temperature</span>:
                            <span x-text="aiConfig.temperature" class="text-wa-green"></span>
                        </label>
                        <input type="range" x-model.number="aiConfig.temperature" min="0" max="2" step="0.1"
                            class="w-full accent-wa-green" />
                    </div>

                    <!-- Message Delay -->
                    <div>
                        <label class="block text-xs font-sans text-wa-text-secondary mb-2" x-text="$t('message_delay')">Message Delay</label>
                        <div class="flex items-center gap-3">
                            <input type="number" x-model.number="aiConfig.messageDelay" min="0" max="60" step="1"
                                class="w-24 bg-wa-bg-deep border border-wa-border text-white text-sm p-3 focus:border-wa-green focus:outline-none rounded-lg" />
                            <span class="text-xs text-wa-text-secondary">s</span>
                        </div>
                        <p class="text-[10px] text-wa-text-secondary mt-1"
                            x-text="aiConfig.messageDelay === 0
                                ? ($t('message_delay_off') || 'Immediate processing (no accumulation)')
                                : ($t('message_delay_desc') || 'Wait for more messages before processing')">
                        </p>
                    </div>

                    <!-- Filters Section -->
                    <div class="border-t border-wa-border pt-6 mt-6">
                        <h4 class="text-xs text-wa-green tracking-normal mb-4">Filtros</h4>

                        <!-- Exclude Groups Toggle -->
                        <div class="flex items-center justify-between gap-4 p-4 bg-wa-bg-deep border border-wa-border rounded-lg mb-4">
                            <div class="min-w-0">
                                <label class="text-sm font-medium text-white" x-text="$t('exclude_groups')">Exclude Groups</label>
                                <p class="text-xs text-wa-text-secondary mt-1" x-text="$t('exclude_groups_desc')"></p>
                            </div>
                            <button type="button" @click="aiConfig.excludeGroups = !aiConfig.excludeGroups"
                                class="relative w-12 h-6 rounded-full transition-colors flex-shrink-0"
                                :class="aiConfig.excludeGroups ? 'bg-wa-green' : 'bg-gray-700'">
                                <span class="absolute w-5 h-5 bg-white rounded-full top-0.5 transition-all"
                                    :class="aiConfig.excludeGroups ? 'left-6' : 'left-0.5'"></span>
                            </button>
                        </div>

                        <!-- Ignored Labels -->
                        <div class="p-4 bg-wa-bg-deep border border-wa-border rounded-lg">
                            <div class="flex items-center justify-between mb-1">
                                <label class="block text-sm font-medium text-white" x-text="$t('ignored_labels')">Ignored Labels</label>
                                <button type="button" @click="syncLabels()"
                                    :disabled="syncingLabels"
                                    class="inline-flex items-center gap-1.5 px-2 py-1 text-[10px] text-wa-text-secondary hover:text-white transition-colors rounded"
                                    title="Sync labels from WhatsApp">
                                    <span :class="{'animate-spin': syncingLabels}">⟳</span>
                                    <span>Sync</span>
                                </button>
                            </div>
                            <p class="text-xs text-wa-text-secondary mb-3" x-text="$t('ignored_labels_desc')"></p>

                            <!-- Label grid -->
                            <div class="flex flex-wrap gap-2">
                                <template x-for="lbl in botLabels" :key="lbl.id">
                                    <button type="button"
                                        @click="toggleIgnoredLabel(lbl.id)"
                                        class="inline-flex items-center gap-1.5 px-2.5 py-1.5 rounded-lg text-xs font-medium transition-all border cursor-pointer select-none"
                                        :class="aiConfig.ignoredLabels.includes(lbl.id)
                                            ? 'bg-red-500/15 border-red-500/40 text-red-400'
                                            : 'bg-wa-bg-hover border-wa-border text-wa-text-secondary hover:border-wa-text-secondary'"
                                    >
                                        <span class="w-2.5 h-2.5 rounded-full shrink-0" :style="'background:' + getLabelColor(lbl.color)"></span>
                                        <span x-text="lbl.name"></span>
                                        <span x-show="aiConfig.ignoredLabels.includes(lbl.id)" class="text-red-400/70 text-[10px] ml-0.5">✕</span>
                                    </button>
                                </template>
                                <span x-show="botLabels.length === 0" class="text-wa-text-secondary text-xs py-1">No labels synced</span>
                            </div>

                            <!-- Summary -->
                            <div x-show="aiConfig.ignoredLabels.length > 0" class="mt-3 pt-2 border-t border-wa-border/50">
                                <p class="text-[10px] text-red-400/70">
                                    <span x-text="aiConfig.ignoredLabels.length"></span> label(s) ignored — AI will not respond to sessions with these labels
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="flex gap-3 pt-4 flex-wrap">
                        <button type="submit" :disabled="savingAI"
                            class="px-6 py-3 bg-wa-green text-white font-sans text-xs tracking-normal hover:bg-wa-green-hover transition-colors disabled:opacity-50 rounded-lg"
                            x-text="savingAI ? ($t('saving') || 'Saving...') : ($t('save_ai_config') || 'Save AI Config')">
                        </button>
                        <button type="button" @click="clearConversations()"
                            class="px-4 py-3 border border-red-500/30 text-red-400 font-sans text-xs hover:bg-red-500/10 transition-colors rounded-lg"
                            x-text="$t('clear_conversations')">
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Tools Tab -->
        <div x-show="activeTab === 'tools'" style="display: none;">
            <div class="bg-wa-bg-panel border border-wa-border p-4 sm:p-6 relative rounded-xl">

                <div class="flex justify-between items-center mb-6 gap-3 flex-wrap">
                    <h3 class="text-xs text-wa-green tracking-normal" x-text="$t('tools')">Tools</h3>
                    <a :href="'/tool-editor?botId=' + botId"
                        class="px-6 py-2 bg-wa-green text-white font-sans text-xs tracking-normal hover:bg-wa-green-hover transition-colors rounded-lg flex items-center gap-2">
                        <span>+</span>
                        <span x-text="$t('new_tool')">New Tool</span>
                    </a>
                </div>

                <!-- Built-in Tools -->
                <div class="mb-6">
                    <h4 class="text-[10px] text-wa-text-secondary tracking-widest uppercase mb-3" x-text="$t('builtin_tools') || 'Built-in Tools'">Built-in Tools</h4>
                    <div class="space-y-2">
                        <template x-for="bt in builtinTools" :key="bt.name">
                            <div class="p-3 bg-wa-bg-deep border border-wa-border/50 rounded-lg opacity-80">
                                <div class="flex items-center gap-2 mb-0.5">
                                    <span class="font-bold font-mono text-sm text-white" x-text="bt.name"></span>
                                    <span class="text-[10px] font-sans bg-wa-green/10 text-wa-green px-2 py-0.5 rounded-md">BUILTIN</span>
                                </div>
                                <p class="text-xs text-wa-text-secondary" x-text="bt.description"></p>
                            </div>
                        </template>
                    </div>
                </div>

                <!-- Custom Tools -->
                <h4 class="text-[10px] text-wa-text-secondary tracking-widest uppercase mb-3" x-text="$t('custom_tools') || 'Custom Tools'">Custom Tools</h4>
                <template x-if="tools.length > 0">
                    <div class="space-y-3">
                        <template x-for="tool in tools" :key="tool.id">
                            <a :href="'/tool-editor?id=' + tool.id"
                                class="block p-4 bg-wa-bg-deep border border-wa-border hover:border-wa-green/30 transition-all group rounded-lg">
                                <div class="flex justify-between items-start">
                                    <div class="flex-1">
                                        <div class="flex items-center gap-2 mb-1 flex-wrap">
                                            <h4 class="font-bold font-sans group-hover:text-wa-green transition-colors" x-text="tool.name"></h4>
                                            <span class="text-[10px] font-sans px-2 py-0.5 rounded-md"
                                                :class="tool.status === 'ACTIVE' ? 'bg-green-500/10 text-green-400' : 'bg-gray-500/10 text-wa-text-secondary'"
                                                x-text="tool.status"></span>
                                            <span class="text-[10px] font-sans bg-wa-green/10 text-wa-green px-2 py-0.5 rounded-md" x-text="tool.actionType"></span>
                                        </div>
                                        <p class="text-xs text-wa-text-secondary line-clamp-2" x-text="tool.description"></p>
                                    </div>
                                    <svg class="w-4 h-4 text-wa-text-secondary group-hover:text-wa-green transition-colors flex-shrink-0 mt-1"
                                        fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </div>
                            </a>
                        </template>
                    </div>
                </template>

                <!-- Convert Flows Section -->
                <template x-if="flows.length > 0">
                    <div class="mt-8 pt-6 border-t border-wa-border">
                        <h4 class="text-xs text-wa-text-secondary tracking-normal mb-4" x-text="$t('convert_to_tool')">Convert Flows to Tools</h4>
                        <div class="space-y-2">
                            <template x-for="flow in flows" :key="'convert-' + flow.id">
                                <div class="flex items-center justify-between gap-3 p-3 bg-wa-bg-deep border border-wa-border rounded-lg">
                                    <span class="text-sm text-wa-text-secondary min-w-0 break-words" x-text="flow.name"></span>
                                    <button @click="convertFlowToTool(flow.id)"
                                        class="px-3 py-1 text-[10px] font-sans border border-wa-green/30 text-wa-green hover:bg-wa-green/10 transition-colors rounded-lg flex-shrink-0 whitespace-nowrap"
                                        x-text="$t('convert_to_tool')">
                                    </button>
                                </div>
                            </template>
                        </div>
                    </div>
                </template>

                <!-- Empty Custom Tools hint -->
                <template x-if="tools.length === 0">
                    <p class="text-xs text-wa-text-secondary text-center py-4" x-text="$t('no_custom_tools') || 'No custom tools yet. Built-in tools are always active.'"></p>
                </template>
            </div>
        </div>

        <!-- Flows Tab -->
        <div
            x-show="activeTab === 'flows'"
            class="grid grid-cols-1 lg:grid-cols-3 gap-8"
        >
            <!-- Connection Panel -->
            <div class="lg:col-span-1">
                <div
                    class="bg-wa-bg-panel border border-wa-border p-1 relative rounded-xl"
                >

                    <div class="px-4 pt-4 mb-2">
                        <h3
                            class="text-xs text-wa-green tracking-normal"
                            x-text="$t('connection')"
                        >
                        </h3>
                    </div>

                    <!-- BotConnection using Alpine re-initialization -->
                    <div x-show="botId" x-html="connectionHtml"></div>
                </div>
            </div>

            <!-- Flows Panel -->
            <div class="lg:col-span-2">
                <div
                    class="bg-wa-bg-panel border border-wa-border p-4 sm:p-6 relative rounded-xl"
                >

                    <div class="flex justify-between items-center mb-6">
                        <h3
                            class="text-xs text-wa-green tracking-normal"
                            x-text="$t('flows')"
                        >
                            Flows
                        </h3>
                        <span
                            class="text-xs font-sans text-wa-text-secondary"
                            x-text="flows.length + ' total'"></span>
                    </div>

                    <!-- Flow List -->
                    <template x-if="flows.length > 0">
                        <div class="space-y-3">
                            <template x-for="flow in flows" :key="flow.id">
                                <a
                                    :href="'/editor?id=' + flow.id"
                                    class="block p-4 bg-wa-bg-deep border border-wa-border hover:border-wa-green/30 transition-all group rounded-lg"
                                >
                                    <div
                                        class="flex justify-between items-start"
                                    >
                                        <div class="flex-1">
                                            <h4
                                                class="font-bold tracking-tight group-hover:text-wa-green transition-colors"
                                                x-text="flow.name"
                                            >
                                            </h4>
                                            <p
                                                x-show="flow.description"
                                                class="text-xs text-wa-text-secondary mt-1"
                                                x-text="flow.description"
                                            >
                                            </p>
                                            <div
                                                class="flex gap-2 mt-3 flex-wrap"
                                            >
